<h1 class="text-center"><%= project.name %></h1>
<div class="container">
  <a href="/projects/<%= project.id %>/edit"><button class="center-block btn btn-info">Edit this Project</button></a>

  <div class="panel panel-default">
    <div class="panel-heading text-center">Description: <%= project.description %></div>
    <div class="panel-body text-center">
      Start Date: <%= project.start_date %></span> <span>End Date: <%= project.end_date %>
    </div>
  </div>

  <form action="/projects/<%= project.id %>" method="post">
    <div>
      <input  type="hidden" name="_method" value="delete" />
      <button type="submit" class="btn btn-danger">Delete this Project</button>
    </div>
  </form>

</div>
