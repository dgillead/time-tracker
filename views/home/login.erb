<h1 class="text-center">Log In to your Account</h1>
<div class="container">
  <form method="post" action="/login">
    <div class="form-group row center-block" class="container">
      <p class="text-center" id="status-message"><%= status_message %></p>
      <div class="col-xs-12 col-md-6">
        <label for="email">Email address:</label>
        <input type="email" class="form-control" id="email" name="email">
      </div>
      <div class="col-xs-12 col-md-6">
        <label for="password">Password:</label>
        <input type="password" class="form-control" id="password" name="password">
      </div>
  </div>
    <button class="center-block btn btn-success" type="submit">Submit</button>
  </form>
</div>
