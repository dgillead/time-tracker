<h1 class="text-center">Create New Work Session</h1>
<div class="container">
  <form method="post" action="/work_sessions">
    <div class="form-group row">
      <div class="col-xs-12 col-md-6">
        <label for="date">Date of Session:</label>
        <input type="date" class="form-control" id="date" name="date">
      </div>
      <div class="col-xs-12 col-md-6">
        <label for="description">Description:</label>
        <input type="text" class="form-control" id="description" name="description">
      </div>
  </div>

  <div class="form-group row">
    <div class="col-xs-12 col-md-6">
      <label for="start_time">Start Time:</label>
      <input type="time" class="form-control" id="start_time" name="start_time">
    </div>
    <div class="col-xs-12 col-md-6">
      <label for="end_time">End Time:</label>
      <input type="time" class="form-control" id="end_time" name="end_time">
    </div>
  </div>

    <div class="radio">
      <label for="is_billable"><input type="radio" class="form-control" id="is_billable" name="is_billable" value="true">Is Billable</label>
    </div>
    <div class="radio">
      <label for="is_billable"><input type="radio" class="form-control" id="is_billable" name="is_billable" value="false">Is Not Billable</label>
    </div>

    <p>Select the project this Work Session belongs to:</p>
    <select name="project_name">
      <% projects.each do |project| %>
        <option value="<%= project.name %>"><%= project.name %></option>
      <% end %>
    </select><br>

    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
